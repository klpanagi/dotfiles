# NAOQI
load_naoqi() {
  export PYTHONPATH=${PYTHONPATH}:/opt/pynaoqi-python2.7-2.1.4.13-linux64
  export LD_LIBRARY_PAT=${LD_LIBRARY_PATH}:/opt/pynaoqi-python2.7-2.1.4.13-linux64
}

