label-song-ellipsis = true

icon-prev = 
icon-seekb = <<
icon-stop = o
icon-pause = 
icon-play = 
icon-next = 
icon-seekf = >>

icon-random = S
icon-repeat = R

toggle-on-foreground = #e60053
toggle-off-foreground = #66
; -----------------------------------------------------------------------------}

