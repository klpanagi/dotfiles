; -----------------------BACKLIGHT Module---------------------{
[module/backlight]
type = internal/xbacklight
enable-scroll = true

output = eDP1

; Available tags:
;   <label> (default)
;   <ramp>
;   <bar>
format = <ramp> <label>
label = %percentage%%

; Only applies if <ramp> is used
ramp-0 = 🌕
ramp-1 = 🌔
ramp-2 = 🌓
ramp-3 = 🌒
ramp-4 = 🌑

; Only applies if <bar> is used
bar-width = 10
bar-indicator = |
bar-fill = ─
bar-empty = ─
; -----------------------------------------------------}

; ---------------- KEYBOARD LAYOUT Module --------------------------{
[module/keyboard]
type = internal/xkeyboard

; Available tags:
;   <label-layout> (default)
;   <label-indicator> (default)
format = <label-layout> <label-indicator>
format-spacing = 0

; Available tokens:
;   %layout%
;   %name%
;   %number%
; Default: %layout%
label-layout = %layout%
label-layout-padding = 2
label-layout-background = ${colors.yellow}
label-layout-foreground = #000000
label-layout-font = 3

label-indicator = %name%
label-indicator-padding = 2
label-indicator-background = ${colors.purple}
label-indicator-foreground = #000000
label-indicator-font = 5
; -------------------------------------------------------------------}

; --------------- XWINDOW Module ------------------------------------{
[module/title]
